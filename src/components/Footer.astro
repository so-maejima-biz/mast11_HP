---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="footer-logo-group">
          <span class="footer-logo">株式会社 マスト１１</span>
          <span class="footer-logo-en">MAST11 Co., Ltd.</span>
        </div>
        <p class="footer-tagline">モノづくりのプロフェッショナル集団</p>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="copyright">&copy; {currentYear} MAST11 Co., Ltd. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-text);
    color: var(--color-bg);
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
  }

  .footer-content {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
  }

  .footer-brand {
    text-align: center;
    transition: transform var(--transition-fast);
  }

  .footer-brand:hover {
    transform: scale(1.02);
  }

  .footer-logo-group {
    display: inline-block;
  }

  .footer-logo {
    font-family: "Noto Sans JP", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: calc(var(--font-size-2xl) * 1.5);
    font-weight: 700;
    color: var(--color-bg);
    letter-spacing: 0.05em;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    transition: text-shadow var(--transition-fast);
    display: block;
  }

  .footer-logo-en {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 0.02em;
    display: block;
    text-align: right;
  }

  .footer-brand:hover .footer-logo {
    text-shadow: 0 2px 10px rgba(255, 255, 255, 0.3), 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .footer-tagline {
    margin-top: var(--spacing-sm);
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.7);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-xl);
    text-align: center;
  }

  .copyright {
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }
</style>
